<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/bgTop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_wave_top" />

            <LinearLayout
                android:id="@+id/llProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bgTop"
                android:gravity="center"
                android:layout_marginTop="-100dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_bg_profile"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bEditprofile"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Edit Profile"
                    android:background="@drawable/bg_btn_editprofile"
                    android:textSize="11dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llProfile"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="50dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_rounded2"
                    android:text="Username"
                    android:textSize="15dp"
                    android:textColor="@color/blue_primary"
                    android:padding="10dp"
                    android:inputType="none"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_rounded2"
                    android:text="Birth Date"
                    android:textSize="15dp"
                    android:textColor="@color/blue_primary"
                    android:padding="10dp"
                    android:inputType="none"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_rounded2"
                    android:text="Phone Number"
                    android:textSize="15dp"
                    android:textColor="@color/blue_primary"
                    android:padding="10dp"
                    android:inputType="none"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_rounded2"
                    android:text="Instagram Account"
                    android:textSize="15dp"
                    android:textColor="@color/blue_primary"
                    android:padding="10dp"
                    android:inputType="none"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_instagram_svgrepo_com__3_"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_rounded2"
                    android:text="Email"
                    android:textSize="15dp"
                    android:textColor="@color/blue_primary"
                    android:padding="10dp"
                    android:inputType="none"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_rounded2"
                    android:text="Password"
                    android:textSize="15dp"
                    android:textColor="@color/blue_primary"
                    android:padding="10dp"
                    android:inputType="none"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="5dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>