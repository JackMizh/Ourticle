<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vBgback"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_wave_top" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"/>

            <TextView
                android:id="@+id/tvSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/blue_primary"
                android:textSize="30dp"
                android:paddingHorizontal="30dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/vBgback"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingBottom="30dp"
                    android:layout_below="@+id/tvSignup">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/blue_primary"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_transparent"
                        android:hint="Name"
                        android:inputType="textEmailAddress"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/blue_primary"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etUserregist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_transparent"
                        android:hint="Username"
                        android:inputType="textEmailAddress"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/blue_primary"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_transparent"
                        android:hint="Email"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/blue_primary"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPassregist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_transparent"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="@color/blue_primary"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_transparent"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bRegist"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_btn_rounded"
                        android:text="REGISTER"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>